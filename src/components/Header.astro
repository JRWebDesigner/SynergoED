---
import LogoSynergo from './LogoSynergo.astro'
---
<header class="h-16 p-9 md:h-20 w-full bg-[#ffffff] bg-opacity-85 flex md:justify-around justify-between items-center z-40 relative">
    <LogoSynergo />
    <button class="z-30 md:hidden mt-1 absolute right-7">
        <svg  xmlns="http://www.w3.org/2000/svg"  width="35"  height="35"  viewBox="0 0 24 24"  fill="none"  stroke="#000"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-menu-2"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 6l16 0" /><path d="M4 12l16 0" /><path d="M4 18l16 0" /></svg>
    </button>
    <nav id="nav-com">
        <ul class="md:flex hidden gap-12">
            <li><a href="/">Inicio</a></li>
            <li><a href="/Especialidades">Especialidades</a></li>
            <li><a href="/Contactos">Contactanos</a></li>
        </ul>
    </nav>
    <nav class="nav-mobile p-4 absolute w-full bg-white h-[60vh] -mx-9 rounded-bl-full">
        <ul class="grid place-items-center gap-12">
            <li><a href="/">Inicio</a></li>
            <li><a href="/Especialidades">Especialidades</a></li>
            <li><a href="/Contactos">Contactanos</a></li>
        </ul>
    </nav>
</header>
<style>
    a{
	color: rgb(138, 138, 138);
	font-weight: 700;
	font-size: 1.7rem;
	transition: .4s color;
}
a:hover{
	color:black
}
    header{
        backdrop-filter: blur(4px);
    }
    .nav-mobile{
        top: -1000%;
        transition: 1s top;
        z-index: 0 !important;
    }
    button:hover ~ .nav-mobile{
        top:100%
    }
    
</style>
