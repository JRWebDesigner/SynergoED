---
const { title } = Astro.props;
import Header from "../components/Header.astro";
import Whatsapp from "../components/whatsapp.astro";
import Footer from "../components/Footer.astro";
import SpeedInsights from "@vercel/speed-insights/astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="SYNERGOed es una empresa dedicada al servicio de la INDUSTRIA ELÉCTRICA; realizamos diseños eléctricos, instalaciones eléctricas en general, cableado estructurado, mantenimiento y reestructuración del sistema eléctrico en todo tipo de infraestructuras."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<title>{title}</title>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/Logos/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/Logos/favicon-16x16.png"
		/>
	</head>
	<body>
		<Header />
		<main>
			<slot />
			<Whatsapp />
		</main>
		<SpeedInsights />
		<Footer />
	</body>
</html>

<style is:global>
	html,
	body {
		scroll-behavior: smooth;
		background-color: rgb(211, 211, 211);
		overflow-x: hidden;
		min-height: 100vh;
	}
	@font-face {
		font-family: "josuem318";
		src: url("/fonts/Saira-Italic-VariableFont_wdth,wght.ttf");
		font-weight: normal;
		font-style: italic;
	}
	p,
	li {
		color: rgb(0, 0, 0);
		font-weight: 600;
		font-size: 1.1rem;
	}
	em {
		font-size: 1.2rem;
	}
	h2 {
		color: rgb(35, 77, 0);
		font-size: 2.2rem;
		font-weight: bold;
	}
	h3 {
		color: rgb(0, 0, 0);
		font-size: 1.6rem;
		font-weight: bold;
	}
	@media (min-width: 768px) {
		p {
			font-size: 1.5rem;
		}
		em {
			font-size: 1.7rem;
		}
	}
</style>
