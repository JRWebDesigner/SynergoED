---
const {title} = Astro.props;
import Header from "../components/Header.astro";
import Whatsapp from '../components/whatsapp.astro'
import Footer from "../components/Footer.astro";
import  SpeedInsights  from "@vercel/speed-insights/astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/Logos/synergoIcon.png" />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
			<Whatsapp />
		</main> 
		<SpeedInsights />
		<Footer />
	</body>
</html>

<style is:global>
html,body{
	background-color: rgb(211,211,211);
	overflow-x: hidden;
	min-height: 100vh;
}
@font-face {
  font-family: 'josuem318';
  src: url('/fonts/Saira-Italic-VariableFont_wdth,wght.ttf');
  font-weight: bold;
  font-style: bold;
}
p{
	color:rgb(0,0,0);
	font-weight:600;
	font-size: 1.1rem;
}
em{
	font-size: 1.2rem;
}
h2{
	color: rgb(35, 77, 0);
	font-size: 2.2rem;
	font-weight: bold;
}
h3{
	color: rgb(0, 0, 0);
	font-size: 1.6rem;
	font-weight: bold;
}
</style>